# MEMSHADOW Environment Configuration
# Classification: UNCLASSIFIED
# Version: 2.1
# Copy this file to .env and configure for your environment

# =============================================================================
# API CONFIGURATION
# =============================================================================
PROJECT_NAME="MEMSHADOW"
VERSION="2.1"
API_V1_STR="/api/v1"
SECRET_KEY="your-super-secret-key-generate-with-secrets-module"
ACCESS_TOKEN_EXPIRE_MINUTES=11520 # 8 days
ALLOWED_HOSTS="*"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:8080,http://localhost:8000"
CORS_ORIGINS="*"

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_SERVER=localhost
POSTGRES_USER=memshadow
POSTGRES_PASSWORD=your_postgres_password_change_me
POSTGRES_DB=memshadow
DATABASE_URL="postgresql://memshadow:your_postgres_password_change_me@localhost:5432/memshadow"

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_change_me
REDIS_DB=0
REDIS_URL="redis://:your_redis_password_change_me@localhost:6379/0"

# =============================================================================
# CHROMADB CONFIGURATION
# =============================================================================
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_COLLECTION="memshadow_memories"
CHROMA_TOKEN="memshadow-token-change-me"

# =============================================================================
# CELERY CONFIGURATION
# =============================================================================
CELERY_BROKER_URL="redis://:your_redis_password_change_me@localhost:6379/0"
CELERY_RESULT_BACKEND="redis://:your_redis_password_change_me@localhost:6379/0"

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ALGORITHM="HS256"
BCRYPT_ROUNDS=12
JWT_SECRET_KEY="generate-another-secure-secret-key-here"
JWT_ALGORITHM="HS256"

# =============================================================================
# MFA CONFIGURATION
# =============================================================================
MFA_ISSUER="MEMSHADOW"
FIDO2_RP_ID="localhost"
FIDO2_RP_NAME="MEMSHADOW"

# =============================================================================
# SDAP CONFIGURATION
# =============================================================================
SDAP_BACKUP_PATH="/var/backups/memshadow"
SDAP_ARCHIVE_SERVER="backup.memshadow.internal"
SDAP_GPG_KEY_ID=""

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================
EMBEDDING_MODEL="sentence-transformers/all-mpnet-base-v2"
EMBEDDING_DIMENSION=768
EMBEDDING_CACHE_TTL=3600

# =============================================================================
# CLASSIFICATION & AUTHORIZATION
# =============================================================================
DEFAULT_CLASSIFICATION="UNCLASSIFIED"
REQUIRE_AUTHORIZATION=true
AUTHORIZATION_CONTEXT="security_research"

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL="INFO"
LOG_FORMAT="json"
LOG_FILE="/app/logs/memshadow.log"
AUDIT_LOG_FILE="/app/logs/audit.log"

# =============================================================================
# C2 FRAMEWORK CONFIGURATION
# =============================================================================
C2_BEACON_INTERVAL=60
C2_SESSION_TIMEOUT=300
C2_ENCRYPTION_ENABLED=true
C2_TLS_ENABLED=true
C2_TLS_CERT="/app/certs/server.crt"
C2_TLS_KEY="/app/certs/server.key"
C2_PORT=8443

# =============================================================================
# TEMPEST CONFIGURATION
# =============================================================================
TEMPEST_CLASSIFICATION="UNCLASSIFIED"
TEMPEST_BANNER_ENABLED=true
TEMPEST_COLOR_SCHEME="military"
TEMPEST_PORT=8080

# =============================================================================
# HARDWARE ACCELERATION
# =============================================================================
ENABLE_GPU=false
ENABLE_NPU=false
ENABLE_AVX512=true
ENABLE_OPENVINO=false

# =============================================================================
# SWARM AGENT CONFIGURATION
# =============================================================================
SWARM_MAX_AGENTS=8
SWARM_TASK_TIMEOUT=300
SWARM_COORDINATION_MODE="blackboard"

# =============================================================================
# LURECRAFT PHISHING CONFIGURATION
# =============================================================================
LURECRAFT_SMTP_HOST="localhost"
LURECRAFT_SMTP_PORT=25
LURECRAFT_SMTP_USER=""
LURECRAFT_SMTP_PASSWORD=""
LURECRAFT_FROM_EMAIL="noreply@example.com"
LURECRAFT_ENABLED=true

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
ENVIRONMENT="development"
DOCKER_REGISTRY=""
DOCKER_IMAGE_TAG="latest"

# =============================================================================
# MONITORING & ALERTING
# =============================================================================
SENTINEL_ENABLED=true
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_BURST=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_C2_ENABLED=true
FEATURE_LURECRAFT_ENABLED=true
FEATURE_WIFI_CRACKING=false
FEATURE_BLOCKCHAIN_ANALYSIS=true